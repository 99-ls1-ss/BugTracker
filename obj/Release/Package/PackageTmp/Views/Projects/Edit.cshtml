@using System.Collections
@using BugTracker.Models
@model ProjectUsersModel

@{
    ViewBag.Menu = "Projects";
    ViewBag.Message = "Edit Project Users";
    ViewBag.Title = "Edit Project Users";
}

<div class="container">
    <div class="wrapper-2">
        <h4><span>@ViewBag.Message for the @Html.DisplayFor(m => m.Project.Name) Project</span></h4>
        <div class="row">
            <div class="col-md-9">
                @Html.ActionLink("Back to Project List", "Index", null, new { @class = "text-right" })
            </div>
            <div class="col-md-3 text-right">
                @if (User.IsInRole("Admin") || User.IsInRole("Guest")) {
                    @Html.ActionLink("Create New Project", "Create")
                }
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="wrapper-2">
        <div class="row">
            <div id="site_content">
                <div class="col-md-offset-3 col-md-6">
                    <form method="post" action="@Url.Action("Edit")">

                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => Model.Project.Id)

                        @Html.ListBoxFor(m => m.SelectedUsers, Model.Users, new { @class = "form-control" })

                        <br />
                        <button class="btn btn-flat flat-color" type="submit">Submit</button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

