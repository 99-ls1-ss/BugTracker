@using BugTracker.Models;
@model IEnumerable<BugTracker.Models.ApplicationUser>

@{
    ViewBag.Title = "User List";
}
<section class="section colored-wrapper">
    <div class="container">
        <div class="wrapper-2">
            <div class="row">
                <div class="col-md-9 content-wrapper">
                    <h2><span>@ViewBag.Title</span></h2>
                </div>
                <div class="col-md-3 text-right">
                    @*@Html.ActionLink("Create New User", "Create")*@
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="wrapper-2">
            <table class="table usersTable" id="ticketTable">
                <thead>
                    <tr>
                        <th>User Name</th>
                        <th>Assigned Roles</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model) {
                        <tr>
                            <td>
                                <a href="@Url.Action("EditUser", new { id = user.Id })">
                                    @user.DisplayName
                                </a>
                            </td>
                            <td>
                                <a href="@Url.Action("EditUser", new { id = user.Id })">
                                    @foreach (var role in user.Roles) {
                                        <div>@ViewBag.Roles[role.RoleId]</div>
                                    }
                                </a>
                            </td>
                            <td>
                                <a href="@Url.Action("EditUser", new { id = user.Id })">
                                    @user.UserName
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
    @section scripts{
        <script>
            $(document).ready(function () {
                $('#ticketTable').DataTable();
            });
        </script>
    }
