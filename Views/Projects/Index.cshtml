@model IEnumerable<BugTracker.Models.ProjectsModel>

@{
    ViewBag.Title = "Projects";
    ViewBag.Message = "List of Projects";
    ViewBag.Menu = "Projects";
}

<div class="container">
    <div class="wrapper-2">
        <div class="row">
            <div class="col-md-9 content-wrapper">
                <h2><span>@ViewBag.Message</span></h2>
            </div>
            <div class="col-md-3 text-right">
                @if (User.IsInRole("Admin")) {
                    @Html.ActionLink("Create New Project", "Create")
                }
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="wrapper-2">
        <div class="row">
            <div id="site_content">

                <table class="table" id="ticketTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Id)
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model) {
                            <tr>
                                <td>
                                    <a href="@Url.Action("Edit", "Projects", new { id = item.Id })">
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </a>
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", "Projects", new { id = item.Id })">
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </a>
                                </td>
                                @*<td>
                        <a href="@Url.Action("Edit", "Projects", new { id = item.Id })">Edit |</a>
                        <a href="@Url.Action("Details", "Projects", new { id = item.Id })">Details |</a>
                        @if (User.IsInRole("Admin")) {
                            <a href="@Url.Action("Delete", "Projects", new { id = item.Id })">Delete</a>
                        }
                    </td>*@
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            $('#ticketTable').DataTable();
        });
    </script>
}