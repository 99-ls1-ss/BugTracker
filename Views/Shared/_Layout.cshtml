@using Microsoft.AspNet.Identity;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <!-- mobile settings -->
    <meta name="viewport" content="width=device-width, maximum-scale=1, initial-scale=1, user-scalable=0" />
    <!--[if IE]><meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1'><![endif]-->
    <!-- WEB FONTS : use %7C instead of | (pipe) -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400%7CRaleway:300,400,500,600,700%7CLato:300,400,400italic,600,700" rel="stylesheet" type="text/css" />

    <!-- PAGE LEVEL SCRIPTS -->
    @*@Styles.Render("~/plugins/css")*@
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/skins.css" rel="stylesheet" />
    <link href="~/Content/DataTables-1.10.9/media/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/Content/stylesheet.css" rel="stylesheet" />
    <link href="~/Content/myStyles.css" rel="stylesheet" />

    <link href="~/assets/font-awesome/css/font-awesome.min.css" rel="stylesheet">

    <meta name="description" content="The description of my page" />
</head>
<body class="smoothscroll enable-animation">
    <!-- wrapper -->
    <div id="wrapper">
        <header id="header-2" class="header">
            <nav class="navbar navbar-default" role="navigation">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @*@Html.ActionLink("PayneSolutions", "Index", "Tickets", new { area = "" }, new { @class = "navbar-brand" })*@
                        <a class="navbar-brand" href="@Url.Action("Index","Tickets")">Payne<span>Solutions</span></a>
                    </div>
                    <div class="collapse navbar-collapse navbar-ex1-collapse">
                        <ul class="nav navbar-nav">
                            <li class="dropdown  @(ViewBag.Menu == "Tickets" ? "active" : "")">@Html.ActionLink("Tickets", "Index", "Tickets")</li>
                            @if (User.IsInRole("Admin")) {
                                <li class="dropdown  @(ViewBag.Menu == "Users" ? "active" : "")">@Html.ActionLink("User Admin", "Index", "Admin")</li>
                                <li class="dropdown  @(ViewBag.Menu == "Projects" ? "active" : "")">@Html.ActionLink("Project Admin", "Index", "Projects")</li>
                            }

                        </ul>

                        @*@Html.Partial("_LoginPartial")*@
                    </div>
                    <div class="row login-bar">
                        <div class="col-md-offset-6 col-sm-6 col-xs-12 blogAccount">
                            @Html.Partial("_LoginPartial")
                        </div>
                    </div>
                </div>
            </nav>
        </header>

        @RenderBody()

        <footer id="footer-2" class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12 col-sm-6 footer-info-wrapper">
                        <span>Copyright © PayneSolutions @System.DateTime.Now.ToString("yyyy")</span>
                    </div>
                    <!-- /.footer-info-wrapper -->
                    <div class="col-xs-12 col-sm-6 social-link-wrapper">
                        <ul class="social-links">
                            <li><a href="https://www.facebook.com/brandon.payne.374" target="_blank"><i class="icon-facebook"></i></a></li>
                            <li><a href="https://plus.google.com/u/0/+BPayne/posts" target="_blank"><i class="icon-google-plus"></i></a></li>
                            <li><a href="https://github.com/99-ls1-ss" target="_blank"><i class="icon-github"></i></a></li>
                        </ul>
                    </div>
                    <!-- /.social-link-wrapper -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container -->
        </footer>

        <!-- SCROLL TO TOP -->
        <a href="#" id="toTop"></a>


        <!-- PRELOADER -->
        <div id="preloader">
            <div class="inner">
                <span class="loader"></span>
            </div>
        </div>
        <!-- /PRELOADER -->

    </div>
    <!-- /wrapper -->
    <!-- JAVASCRIPT FILES -->

    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/plugins/scripts")*@
    @Scripts.Render("~/bundles/bootstrap")
    
    <script>
        var plugin_path = '~/plugins/';
        //console.log(plugin_path);
    </script>
    @*<script src="~/Scripts/jquery-1.10.2.js"></script>*@
    @*<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>*@



    <script src="~/Scripts/contact.js"></script>
    <script src="~/Scripts/jquery.countTo.js"></script>
    <script src="~/Scripts/scripts.js"></script>
    <script src="~/Scripts/view/demo.revolution_slider.js"></script>



    @RenderSection("scripts", required: false)

    <script src="~/Scripts/DataTables-1.10.9/media/js/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/DataTables-1.10.9/extensions/Responsive/js/dataTables.responsive.min.js"></script>

    <script src="~/Scripts/tinymce/jquery.tinymce.min.js"></script>
    <script src="~/Scripts/tinymce/tinymce.js"></script>
    <script src="~/Scripts/jquery.dotdotdot.js"></script>
    <script>
        $(document).ready(function () {
            $("#tinyMceEditor").tinymce({});
            $(".tinyMceCommentEditor").tinymce({});

            $('.jsBlogBody').dotdotdot({
                wrap: 'word',
                fallbackToLetter: true,
                ellipsis: '... ',
                height: 50
            });
        });
    </script>

</body>



</html>
